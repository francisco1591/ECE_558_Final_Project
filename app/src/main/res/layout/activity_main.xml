<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="MainActivity"
                android:gravity="center"
                android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_keyword"
        android:id="@+id/btnKeyword"
        android:layout_marginBottom="12dp"/>

    <LinearLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ToggleButton
            android:id="@+id/toggle_SMS"
            android:textOn="@string/enabled_SMS"
            android:textOff="@string/disabled_SMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_SMS"
            android:textSize="18dp"
            android:layout_marginLeft="18dp"
            android:id="@+id/textview_SMS"
            android:clickable="true" />

    </LinearLayout>


    <LinearLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ToggleButton
            android:id="@+id/toggle_email"
            android:textOn="@string/enabled_email"
            android:textOff="@string/disabled_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_email"
            android:textSize="18dp"
            android:layout_marginLeft="18dp"
            android:id="@+id/textview_email"
            android:clickable="true" />

    </LinearLayout>

    <LinearLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <ToggleButton
            android:id="@+id/toggle_location"
            android:textOn="@string/enabled_location"
            android:textOff="@string/disabled_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_location"
            android:textSize="18dp"
            android:layout_marginLeft="18dp"
            android:id="@+id/textview_location"
            android:clickable="true" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:id="@+id/textview_description"
        android:text="@string/description_SMS"
        android:textSize="12dp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_syntax"
        android:text="@string/syntax_SMS"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_permission"
        android:text="@string/permission_SMS"
        android:layout_marginBottom="12dp" />

</LinearLayout>